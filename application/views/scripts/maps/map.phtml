		<?= (integer)$this->downloads ?>
		<? if( !empty( $this->file ) ): ?>		
		<a href="javascript:void(0);" onClick="download_map( <?= $this->id ?>, 'http://downloads.warsow-race.net/warsow/pk3s/racesow/<?= urlencode( $this->file ) ?>' );"><img align="absmiddle" src="/gfx/icons/ico_floppy.gif" border="0" /></a>
