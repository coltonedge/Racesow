<tr class="racenet_row rankedmaps_click" <?= $this->match ? 'style="background-color: #302843;"' : '' ?>>
	<td style="font-size: 12px; text-align: right;">
        <?= $this->position ?>.
    </td>
	<td>			
		<a class="wmtt" rel="<?= $this->image ?>" href="/maps/details/id/<?= $this->id ?>/"><?= str_replace('+', 'plus', $this->name) ?></a>
		<!--span style="font-size: 10px;"><?= ($this->freestyle == "true" ? "freestyle" : "race") ?></span-->
	</td>
	<td>
		<?= $this->partial('rating-out.phtml', array("name" => str_replace('+', 'plus', $this->name), "rating" => $this->rating * 4, "disabled" => true, "info" => "($this->ratings rating". ($this->ratings != 1 ? 's' : '') .")")) ?>
